# simple configs that are much generally useful and less taste-dependent
source screenrc-simple.rc

# the following two lines give a two-line status, with the current window highlighted
hardstatus alwayslastline
hardstatus string '%{= kG}[%{G}%H%? %1`%?%{g}][%= %{= kw}%-w%{+b yk} %n*%t%?(%u)%? %{-}%+w %=%{g}][%{B}%m/%d %{W}%C%A%{g}]'


# default windows
source defaultwindows.rc

# navigation and region management keybindings
source navbindings.rc

# layout definitions
source layouts.rc

# multiuser acl definitions
source multiuser.rc

# finally, any possible user-defined personalizations
source "~/.screen-personalizations"
